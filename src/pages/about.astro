---
import Landing from '../components/landing.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <main class="mx-auto lg:px-9 px-3 py-10 bg-gradient-to-r from-teal-50 via-gray-50 to-teal-50 w-full">
        <section class="mb-12">
          <h2 class="text-2xl font-semibold text-center mb-6">Who We Are</h2>
          <p class="text-lg text-center max-w-2xl mx-auto leading-relaxed">
            We are a team of dedicated professionals committed to delivering exceptional results. 
            Our mission is to create value and make a difference in everything we do.
          </p>
        </section>
    
        <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-3">
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="text-xl font-semibold mb-4">Our Mission</h3>
            <p>
              To inspire and empower individuals to achieve their dreams and contribute to a better world.
            </p>
          </div>
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="text-xl font-semibold mb-4">Our Vision</h3>
            <p>
              To be the leading organization in delivering innovative and sustainable solutions worldwide.
            </p>
          </div>
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="text-xl font-semibold mb-4">Our Values</h3>
            <p>
              Integrity, excellence, and collaboration are at the heart of our operations.
            </p>
          </div>
        </section>

        <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="text-xl font-semibold mb-4">Our Mission</h3>
            <p>
              To inspire and empower individuals to achieve their dreams and contribute to a better world.
            </p>
          </div>
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="text-xl font-semibold mb-4">Our Vision</h3>
            <p>
              To be the leading organization in delivering innovative and sustainable solutions worldwide.
            </p>
          </div>
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="text-xl font-semibold mb-4">Our Values</h3>
            <p>
              Integrity, excellence, and collaboration are at the heart of our operations.
            </p>
          </div>
        </section>
    
        <section class="mt-12">
          <h2 class="text-2xl font-semibold text-center mb-6">Meet Our Team</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="bg-white rounded-lg shadow-lg p-6 text-center">
              <img src="https://via.placeholder.com/150" alt="Team Member" class="rounded-full mx-auto mb-4">
              <h3 class="text-lg font-bold">John Doe</h3>
              <p class="text-sm text-gray-500">CEO</p>
            </div>
            <div class="bg-white rounded-lg shadow-lg p-6 text-center">
