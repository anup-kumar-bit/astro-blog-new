---
import { getCollection } from "astro:content";

const posts = await getCollection("blogs");
---

<div class="flex flex-col items-center justify-center w-screen bg-gradient-to-r from-gray-50 via-gray-0 to-gray-50 pt-5 pb-5">
  <!-- <div class="w-full 2xl:w-[99rem] py-3 my-4 p-4 lg:px-10 2xl:px-3 rounded-sm">
    <p class="font-mono text-lg sm:text-xl ml-1 text-[#002044]">Browse and read the latest stuff</p>
    <h2 class="flex justify-start text-3xl xl:text-5xl font-sans font-extrabold text-[#002044]">Latest Stories</h2>
  </div> -->
  <div class="grid grid-cols-1 xl:grid-cols-3 gap-4 py-5 sm:p-5 2xl:w-[97rem] xl:p-9">
    <!-- First post occupies the left column -->
    <div class="col-span-2 bg-white border border-gray-200 rounded-md shadow-lg dark:bg-gray-800 dark:border-gray-700 overflow-hidden">
      <a href="#">
        <img
          class="w-full h-[32rem] object-cover sm:rounded-t-md lg:hover:scale-105 hover:transition-all ease-in duration-500"
          src={posts[0].data.image}
          alt={posts[0].data.title}
        />
      </a>
      <div class="p-6">
        <a href="#">
          <h5 class="mb-4 text-3xl font-extrabold tracking-tight text-gray-900 dark:text-white">
            {posts[0].data.title}
          </h5>
        </a>
        <p class="mb-4 text-lg font-normal text-gray-700 dark:text-gray-400">
          {posts[0].body.slice(0, 500)}
        </p>

      </div>
    </div>

    <!-- Remaining posts stacked in the right column -->
    <div class="flex xl:flex-col items-center justify-center xl:justify-between w-full flex-row  gap-4 xl:w-[30rem]">
      {posts.slice(1, 3).map((post:any) => (
        <div class="bg-white border border-gray-200 rounded-md shadow-sm dark:bg-gray-800 dark:border-gray-700 w-2/5 xl:w-full overflow-hidden">
          <a href="#">
            <img
              class="w-full h-[12rem] object-cover sm:rounded-t-md hover:scale-105 hover:transition-all ease-in duration-500"
              src={post.data.image}
              alt={post.data.title}
            />
          </a>
          <div class="p-5">
            <a href="#">
              <h5 class="mb-2 text-lg font-bold tracking-tight text-gray-900 dark:text-white">
                {post.data.title}
              </h5>
            </a>
            <p class="mb-3 text-sm font-normal text-gray-700 dark:text-gray-400">
              {post.body.slice(0, 286)}.
            </p>

          </div>
        </div>
      ))}
    </div>
  </div>
</div>
